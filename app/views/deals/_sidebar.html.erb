<aside class="col-md-4">
  <div class="box_style_1 expose">
    <h3 class="inner">- Get Your Coupon-</h3>
    <div class="row">
      <div class="col-md-12 col-sm-12">
            <div class="img_container">
              <%=image_tag 'coupon2.svg.png', style:'width:100%; height:100%', class:'img-responsive'%>
              <div class="badge_save">Save<strong><%=@deal.percentage%>%</strong></div>
              <div class="coupon_info">
                <span> <%=@deal.about%></span>
              </div>
              <div class="short_info">
                <i class="<%=@deal.category.icon%>"></i> <%=@deal.category.name%><span class="price"><sup>DT</sup><%=@deal.prix_after%></span>
              </div>
              </div>
      </div>
    </div>
    <hr>
    <%if !user_signed_in?%>
        <%= link_to wishlist_path, class: "btn_full" do %>
            <i class="icon-forward"></i> Please Login
        <%end%>
    <%else%>
    <%= form_for([@deal, @deal.coupons.build]) do |f| %>
        <!-- End row -->
          <%= f.text_field :number  ,value:"Deals#{rand(max=60000)}", class:'form-control', type: 'hidden' %>
        <%= f.submit 'Get It', class:'btn_full' %>
     <%end%>
        <%= link_to vote_deal_path(@deal), method: :put, class: "btn_full_outline" do %>
            <i class=" icon-heart"></i> Your Coupons List
        <%end%>
    <%end%>

  </div><!--/box_style_1 -->

  <div class="box_style_4">
    <i class="icon_set_1_icon-90"></i>
    <h4><span>Book</span> by phone</h4>
    <a href="tel://004542344599" class="phone">+45 423 445 99</a>
    <small>Monday to Friday 9.00am - 7.30pm</small>
  </div>

</aside>