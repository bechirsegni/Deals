<section id="hero" class="login">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
        <div id="login">
          <div class="text-center">
            <div class="row">
              <div class="col-md-6 col-sm-6 col-xs-6">
                  <%= link_to user_facebook_omniauth_authorize_path , class:'bt_facebook' do %>
                  <i class="icon-facebook"></i>Facebook <%end%>
              </div>
              <div class="col-md-6 col-sm-6 col-xs-6">
                <%= link_to user_google_oauth2_omniauth_authorize_path , class:'bt_google' do %>
                    <i class="icon-google"></i>Google <%end%>
              </div>
            </div>
          </div>
          <hr>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>
              <div class="row">
                <div class="col-md-6">
            <div class="form-group">
              <label>First Name</label>
              <%= f.text_field :first_name, class:'form-control'%>
            </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label>Last Name</label>
                    <%= f.text_field :last_name, class:'form-control'%>
                  </div>
                </div>
              </div>
            <div class="form-group">
              <label>Email</label>
              <%= f.email_field :email, autofocus: true , class:'form-control'%>
              </div>
            <div class="form-group">
              <label>Password</label>
              <%= f.password_field :password, autocomplete: "off", class:'form-control' %>
            </div>
            <div class="form-group">
              <label>Confirm password</label>
              <%= f.password_field :password_confirmation, autocomplete: "off", class:'form-control'  %>
            </div>
            <div id="pass-info" class="clearfix"></div>
              <%= f.submit "Create an account" , class:'btn_full'%>
          <%end%>
          <%= link_to 'Have an Account ? Sign in', login_path, id:'forgot_pw'%>
        </div>
      </div>
    </div>
  </div>
</section>

